<% include partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image medium" src="<%= blog.image %>" alt="<%= blog.image %>">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>

            </div>
            <div class="description">
                <p><%= blog.body %></p>
            </div>
        </div>
        <div class="item">
            <form action="/blogs/<%= blog.id %>?_method=delete" method="post" class="ui form">
                <a class="ui button blue" href="/blogs/<%= blog.id %>/edit">Edit</a>
                <button class="ui button red">Delete</button>
            </form>
        </div>
    </div>

</div>

<% include partials/footer.ejs %>