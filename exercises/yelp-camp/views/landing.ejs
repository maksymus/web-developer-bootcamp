<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" href="/lib/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/lib/css/fontawesome-all.min.css" type="text/css">
    <link rel="stylesheet" href="/css/landing.css" type="text/css">

    <title>Yelp Campground</title>
</head>
<body>
    <div class="container">
        <% if (error && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
        </div>
        <% } %>
        <% if (success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>

    <div class="container" id="landing-header">
        <h1>Welcome to YelpCamp!</h1>
        <a href="/campgrounds" class="btn btn-success btn-lg">View All Campgrounds</a>
    </div>

    <ul class="slideshow">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>

