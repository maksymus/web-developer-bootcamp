<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelp Camp</h1>
            <p>View our campgrounds from all over the world.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="card-deck text-center">
                    <div class="card" style="width: 18rem; ">
                        <p class="card-header"><%= campground.name %></p>
                        <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.image %>">
                        <div class="card-body">
                            <p class="card-text"><%= campground.description.substr(0, 100) %>...</p>
                            <a href="/campgrounds/<%= campground.id %>" class="card-link btn btn-primary">More Info</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer.ejs %>