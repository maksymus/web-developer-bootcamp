<% include ../../partials/header.ejs %>

<div class="container">
    <div style="width: 50%; margin: 0px auto">
        <h1>Add New Comment to <%= campground.name %></h1>
        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
            <div class="form-group">
                <input type="text" id="text" name="comment[text]" placeholder="text" class="form-control">
            </div>

            <div class="form-group">
                <input type="text" id="author" name="comment[author]" placeholder="author" class="form-control">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>

        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../../partials/footer.ejs %>