<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <div class="col-sm-9 col-md-9 col-lg-9">
            <div class="card-deck text-center">
                <div class="card" style="width: 18rem; ">
                    <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.image %>">
                    <div class="card-body" style="padding: 13px;">
                        <p class="card-title clearfix">
                            <h4 class="float-left"><a href="#"><%= campground.name %></a></h4>
                            <h4 class="text-right"><strong>$9.99/night</strong></h4>
                        </p>
                        <p class="card-text text-left"><%= campground.description %></p>
                    </div>
                </div>
            </div>
            <div>&nbsp;</div>
            <div class="card card-body bg-light">
                <div class="text-right">
                    <a href="/campgrounds/<%= campground.id %>/comments/new" class="card-link btn btn-success">Add Comment</a>
                </div>
                <hr>
                <% campground.comments.forEach(function (comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong> <span class="float-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>

            </div>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>